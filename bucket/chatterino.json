{
    "version": "22520955109",
    "description": "Chat client for https://twitch.tv",
    "homepage": "https://github.com/Chatterino/chatterino2",
    "license": "MIT",
    "suggest": {
        "vcredist-aio": "extras/vcredist-aio"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Chatterino/chatterino2/releases/download/nightly-build/chatterino-windows-x86-64-Qt-6.7.1.zip",
            "hash": "41f237f1d53ee5a59c85db1548ff8e11c03e53926de98b02168f2db38a007daf"
        }
    },
    "extract_dir": "Chatterino2",
    "pre_install": "'externally-packaged' | Out-File -Encoding utf8 -Append \"$dir/modes\"",
    "shortcuts": [
        [
            "chatterino.exe",
            "Chatterino"
        ]
    ],
    "bin": "chatterino.exe",
    "checkver": {
        "script": [
            "try {",
            "    $null = (Invoke-WebRequest https://raw.githubusercontent.com/Chatterino/chatterino2/master/.github/workflows/build.yml).Content -cmatch 'os: windows-latest\\s+qt-version: ([\\d.]+)'",
            "    $Matches[1],",
            "    (Invoke-RestMethod 'https://api.github.com/repositories/77624593/actions/workflows/build.yml/runs?branch=master&status=success&per_page=1' -Headers $(if ($auth = Get-GitHubToken) { @{authorization=\"Bearer $auth\"} })).workflow_runs[0].id -join ' '",
            "}",
            "catch { '' }"
        ],
        "regex": "\\A(?<qt>[\\d.]+) (\\d+)\\Z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Chatterino/chatterino2/releases/download/nightly-build/chatterino-windows-x86-64-Qt-$matchQt.zip"
            }
        }
    }
}
